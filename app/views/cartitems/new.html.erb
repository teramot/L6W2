<%= form_with model: @cartitem, url: cartitems_path do |e| %>
    <p>商品名：<%= @product.name %></p>
    <p>価格：<%= @product.price %></p>
    <p><%= e.hidden_field :product_id, :value => @product.id %></p>
    <p><%= e.label :quantity, '数量' %>
    <%= e.text_field :quantity %></p>
    <p><%= e.submit 'カートに入れる' %></p>
<% end %>

<p><% link_to '戻る', :back %></p>